<% provide(:title, "Anmelden") %>
<h1>Anmelden</h1>

<div class="container">
	<div class="form-horizontal" role="form">
		<%= form_tag anmelden_path, class: 'form-signin', method: :post do %>
			<%= email_field_tag :email, nil, placeholder: "Email", maxlength: 100, class: "form-control", autofocus: true %>
			<%= password_field_tag :password, nil, placeholder: "Passwort", maxlength: 100, class: "form-control" %>
			<%= submit_tag "Anmelden", class: "btn btn-large btn-primary btn-block" %>
		<% end %>
	</div>
</div>

<%= link_to "Neuer Benutzer? Hier registrieren!", registrieren_path %>