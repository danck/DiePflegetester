<% @comment = Comment.new %>

<div class="container">
	<div class="form-horizontal" role="form">
		<%= form_for @comment, url: "/comments", method: :post, role: "form-group" do |f| %>
			<%= render 'shared/error_messages', object: @anbieter %>

			<%= f.text_area :body, class: "form-control input-lg", placeholder: "Kommentar zu #{@anbieter.name}", size: "20x15" %>

			<%= f.hidden_field :anbieter_id, value: @anbieter.id %>

	        <div class="modal-footer">
	        	<button type="button" class="btn btn-default" data-dismiss="modal">Nicht Speichern</button>
				<%= f.submit "Speichern", class: "btn btn-large btn-primary" %>

	        	<!-- <button type="button" class="btn btn-primary">Speichern</button> -->
	        	<input type="hidden" value="<%= @anbieter.id %>">
	        </div>
		<% end %>
	</div>
</div>